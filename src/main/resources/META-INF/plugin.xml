<idea-plugin>
    <id>dev.jidder.lang</id>
    <name>Jidder Language Support</name>

    <vendor email="contact@gubbigames.com">Gubbi Games</vendor>

    <description><![CDATA[
        Provides syntax highlighting for Jidder (<code>.jdr</code>) files, the language used in the Jidder Dialogue System.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.textmate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Jidder" language="Jidder" implementationClass="com.jidder.lang.JidderFileType" fieldName="INSTANCE" extensions="jdr" />
        <lang.syntaxHighlighterFactory language="Jidder" implementationClass="com.jidder.lang.JidderSyntaxHighlighterFactory" />

        <textmate.bundleProvider implementation="com.jidder.textmate.JidderTextMateBundleProvider" />
    </extensions>

</idea-plugin>
